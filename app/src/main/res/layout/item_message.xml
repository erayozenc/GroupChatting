<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layoutReceiverMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivReceiverPp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_pp"
            android:layout_marginTop="7dp"
            app:civ_border_color="@color/pink_dark"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/tvReceiverMessage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivReceiverPp"
            android:layout_marginLeft="56dp"
            android:background="@drawable/receiver_message_round"
            android:backgroundTint="@color/pink_dark"
            android:padding="14dp"
            android:layout_marginTop="7dp"
            android:text="This is a sample message that will appear"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvUserMessage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/user_message_round"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/purple_200"
            android:padding="14dp"
            android:layout_marginTop="7dp"
            android:text="This is a sample message that will appear"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>